apt_tasks () {
  sudo apt-get update && sudo apt-get upgrade &&\
    sudo apt-get autoclean && sudo apt-get autoremove
}

python_tasks () {
  sudo pip install --upgrade awscli wheel virtualenv yapf docker-compose
}

ruby_tasks () {
  gem install bundler pry pry-doc method_source getopt
  gem update --system
  gem update
  rbenv rehash
}

golang_tasks () {
 go get -u golang.org/x/tools/cmd/... github.com/rogpeppe/godef github.com/nsf/gocode github.com/golang/lint/golint
}

git_tasks () {
  parallel "echo '\033[0;32m[{}]\033[0m'; git -C {} pull" ::: ~/.oh-my-zsh ~/.rbenv ~/.rbenv/plugins/*
}

node_tasks () {
  sudo npm install -g tern eslint elm
}

apt_tasks
python_tasks &
ruby_tasks &
golang_tasks &
git_tasks &
node_tasks &
wait