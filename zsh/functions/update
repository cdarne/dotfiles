apt_tasks () {
  sudo apt-get update && sudo apt-get upgrade &&\
    sudo apt-get autoclean && sudo apt-get autoremove
}

python_tasks () {
  sudo pip install --upgrade awscli wheel virtualenv youtube_dl
}

ruby_tasks () {
  gem install bundler pry pry-doc method_source
  gem update --system
  gem update
  rbenv rehash
}

git_tasks () {
  parallel "echo '\033[0;32m[{}]\033[0m'; git -C {} pull" ::: ~/.oh-my-zsh ~/.rbenv ~/.rbenv/plugins/*
}

apt_tasks
python_tasks
ruby_tasks
git_tasks
