ruby_tasks () {
  gem install bundler pry pry-doc method_source
  gem update --system
  rbenv rehash
}

golang_tasks () {
 go get -u golang.org/x/tools/cmd/... github.com/rogpeppe/godef github.com/nsf/gocode github.com/golang/lint/golint
}

git_tasks () {
  git -C ~/.oh-my-zsh pull
}

node_tasks () {
  npm install -g npm tern eslint serve bower polymer-cli
}

ruby_tasks &
golang_tasks &
git_tasks &
node_tasks &
wait
