# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'

# rails
alias r='rails'
alias a='autotest -rails'
alias migrate='rake db:migrate db:test:clone'

alias utmdb='psql --host monica.ldmobile.net --user utm utm'
alias checkitdb='psql --host belinda.ldmobile.net --user checkit checkit'
alias monica_php_err='ssh root@monica.ldmobile.net tail -f /var/log/apache2/php-error.log | ccze -m ansi -p php'
alias belinda_php_err='ssh root@belinda.ldmobile.net tail -f /var/log/apache2/php-error.log | ccze -m ansi -p php'
alias yuicompressor='java -jar ~/opt/yuicompressor-2.4.2.jar "$@"'

# commands starting with % for pasting from web
alias %=' '
