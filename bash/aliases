. ~/.zsh/aliases

# changing directory to code project
function c () { cd ~/Code/$1; }

# alternative to "rails" command to use templates
function railsapp () {
  template=$1
  appname=$2
  shift 2
  rails $appname -m http://github.com/ryanb/rails-templates/raw/master/$template.rb $@
}

# misc
alias reload='. ~/.bash_profile'

# wine
function prefix () {
  export WINEPREFIX="$HOME/.local/share/wineprefixes/$1"
}

function goc () {
  cd $WINEPREFIX/drive_c
}

function optimize_pngs () {
  pngnq -vf -s1 *.png
  rename -f 's/-nq8.png$/.png/' *.png
  optipng -o7 *.png
}

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'

